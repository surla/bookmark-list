<h1>List of Bookmarks</h1>

<a href="/users">Home</a>

<% @bookmarks.each do |bookmark| %>
  <div>
    <p>
      <a href="http://<%= bookmark.url %>" target="_blank"><%= bookmark.title %></a><br>
      <%= bookmark.description %><br>
      <%= bookmark.url %> <br>
      <%= bookmark.created_at.strftime("%b %d %Y") %><br>
      <a href="/bookmarks/<%= bookmark.id %>">View</a>
    </p>
  </div>
<% end %>


<div>
  <p>
    <a href="/bookmarks/new">New bookmark</a>
  </p>
</div>

<nav>
  <ul>
    <li><a href="/users">Home</a></li>
    <li><a href="/categories">View categories</a></li>
    <li><a href="/logout">Logout</a></li>
  </ul>
</nav>
