<h1>Bookmark</h1>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<div>
  <ul>
    <li><%= @bookmark.url %></li>
    <li><%= @bookmark.title %></li>
    <li><%= @bookmark.description %></li>
    <li>Category: <%= @bookmark.category.name %></li>
    <li><%= @bookmark.created_at.strftime("%B %d, %Y") %></li>
  </ul>
</div>

<div>
  <a href="/bookmarks/<%= @bookmark.id %>/edit">Edit</a><br>

  <form action="/bookmarks/<%= @bookmark.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>
</div>

<nav>
  <ul>
    <li><a href="/users">Home</a></li>
    <li><a href="/bookmarks">View bookmarks</a><br></li>
    <li><a href="/categories">View categories</a></li>
    <li><a href="/logout">Logout</a></li>
  </ul>
</nav>
