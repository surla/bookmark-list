
<h1>Bookmark List</h1>
<p><%= @user.email %> </p>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<% @user.bookmarks.each do |bookmark| %>

  <h4><a href="http://<% bookmark.url %>"><%= bookmark.title %></a></h4>
  <ul>
    <li><%= bookmark.url %></li>
    <li><%= bookmark.description %></li>
    <li><%= bookmark.created_at.strftime("%B %d, %Y") %></li>
  </ul>
<% end %>

<div>
  <a href="/bookmarks">View bookmarks</a><br>
  <a href="/categories">View bookmark categories</a>
  <a href="/logout">Logout</a>
</div>
